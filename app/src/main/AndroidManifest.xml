<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcc.alif">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:name=".AlifApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alif">
        <activity
            android:name=".view.ui.cliente.DetalheFilaClienteActivity"
            android:exported="true" />
        <activity android:name=".view.ui.lojista.DetalheFilaHomeActivity" />
        <activity android:name=".view.ui.lojista.FormFuncionarioLojistaActivity" />
        <activity android:name=".view.ui.lojista.FormFilaLojistaActivity" />
        <activity android:name=".view.ui.lojista.LojistaActivity" />
        <activity android:name=".view.ui.cliente.ClienteActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.ui.FirstCadstroActivity" />
        <activity android:name=".view.ui.CadastroActivity" />
        <activity android:name=".view.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>