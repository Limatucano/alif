<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alif" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/whitebackground</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorOnSurface">@color/highGray</item>
        <item name="hintTextColor">@color/BigGray</item>
        <item name="colorPrimary">@color/BigGray</item>
        <item name="colorAccent">@color/BigGray</item>
    </style>

    <style name="EditText">
        <item name="colorAccent">@color/highGray</item>
        <item name="colorControlNormal">@color/mediumGray</item>
        <item name="colorControlHighlight">@color/mediumGray</item>
        <item name="colorControlActivated">@color/mediumGray</item>
    </style>
</resources>