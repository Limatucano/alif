<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="SpinnerTimePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title.Section">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleList" parent="Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleEdit" parent="TitleList">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TitleLight" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/highGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InternalScreenDescription.Description">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="InternalScreenDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="InternalScreenDescription.Dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="InternalScreenTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextButton.Positive">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton.Negative">
        <item name="android:textColor">@color/mediumGray</item>
    </style>
</resources>